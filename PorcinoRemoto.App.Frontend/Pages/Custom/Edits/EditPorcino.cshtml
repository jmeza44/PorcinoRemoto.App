@page
@model EditPorcinoModel
@{ ViewData["Title"] = "Editar Porcino"; }
<div class="container">
    <div class="row">
        <!-- Contenedor "Header" -->
        <div class="col-12">
            <a class="btn btn-outline-secondary" asp-page="/Custom/Detalles/DetallePorcino"
                asp-route-idPorcino="@Model.porcinoPost.PorcinoID">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-arrow-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                        d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
                </svg>
                Volver
            </a>
        </div>
        <!-- Contenedor info porcino -->
        <div class="col-12 mt-4 p-3 border rounded-3 shadow">
            <form method="post" class="row">
                <!-- Formulario edici√≥n -->
                <div class="col-12">
                    <div class="row">
                        <h3 class="col-12 text-nowrap">üêΩ Editar porcino</h3>
                        <input type="hidden" asp-for="porcinoPost.PorcinoID">
                        <div class="col-6 col-md-6 col-lg-5 form-group mb-2">
                            <label asp-for="porcinoPost.Nombre">Nombre</label>
                            <input type="text" asp-for="porcinoPost.Nombre" class="form-control"
                                placeholder="@Model.porcinoPost.Nombre">
                            <span asp-validation-for="porcinoPost.Nombre" class="text-danger"></span>
                        </div>
                        <div class="col-6 col-md-6 col-lg-5 form-group mb-2">
                            <label asp-for="porcinoPost.Color">Color</label>
                            <input type="text" asp-for="porcinoPost.Color" class="form-control"
                                placeholder="@Model.porcinoPost.Color">
                            <span asp-validation-for="porcinoPost.Color" class="text-danger"></span>
                        </div>
                        <div class="col-6 col-md-6 col-lg-5 form-group mb-2">
                            <label asp-for="porcinoPost.Especie">Especie</label>
                            <input type="text" asp-for="porcinoPost.Especie" class="form-control"
                                placeholder="@Model.porcinoPost.Especie">
                            <span asp-validation-for="porcinoPost.Especie" class="text-danger"></span>
                        </div>
                        <div class="col-6 col-md-6 col-lg-5 form-group mb-2">
                            <label asp-for="porcinoPost.Raza">Raza</label>
                            <input type="text" asp-for="porcinoPost.Raza" class="form-control"
                                placeholder="@Model.porcinoPost.Raza">
                            <span asp-validation-for="porcinoPost.Raza" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-12 mt-2">
                    <button class="btn btn-warning">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-pencil-square" viewBox="0 0 16 16">
                            <path
                                d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                            <path fill-rule="evenodd"
                                d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                        </svg>
                        Editar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>